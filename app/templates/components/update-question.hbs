{{#if updateQuestionForm}}
  <h1>Update Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="username">Username</label>
            {{input value=question.username id="username"}}
        </div>

        <div class="form-group">
          <label for="Email">Email</label>
            {{input value=question.email id="email"}}
        </div>

        <div class="form-group">
          <label for="topic">Topic</label>
            {{input value=question.topic id="topic"}}
        </div>

        <div class="form-group">
          <label for="shortQuestion">One sentence summary</label>
            {{input value=question.shortQuestion id="shortQuestion"}}
        </div>

        <div class="form-group">
          <p><label for="longQuestion">Details</label></p>
            {{textarea rows=5 cols="80" value=question.longQuestion id="longQuestion"}}
        </div>

        <button {{action 'update' question}} class="btn btn-success">Save</button>
      </form>
    </div>
{{else}}
      <button {{action 'updateQuestionForm'}} class="btn btn-info">Update Question</button>
{{/if}}
