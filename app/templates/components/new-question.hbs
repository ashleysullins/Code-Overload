<h1>Add a Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="username">Username</label>
          {{input value=username id="username"}}
      </div>

      <div class="form-group">
        <label for="Email">Email</label>
          {{input value=email id="email"}}
      </div>

      <div class="form-group">
        <label for="topic">Topic</label>
          {{input value=topic id="topic"}}
      </div>

      <div class="form-group">
        <label for="shortQuestion">One sentence summary</label>
          {{input value=shortQuestion id="shortQuestion"}}
      </div>

      <div class="form-group">
        <p><label for="longQuestion">Details</label></p>
          {{textarea rows=5 cols="80" value=longQuestion id="longQuestion"}}
      </div>

      <button {{action 'save'}}>Save</button>
    </form>
  </div>
